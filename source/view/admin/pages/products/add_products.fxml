<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="source.controller.admin.pages.products.addProductsController">
    <children>
        <BorderPane layoutX="14.0" layoutY="14.0">
            <center>
                <GridPane  alignment="CENTER_RIGHT" prefHeight="332.0" prefWidth="712.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="20.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="20.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="20.0" prefHeight="40.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Product Code" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="fieldAddProductsCode" promptText="products_code" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200.0" />

                    <Label text="Product Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="fieldAddProductsName" promptText="products_name" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0" />

                    <Label text="Product Size" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="fieldAddProductsSize" promptText="products_size" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200.0" />

                    <Label text="Product Price" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="fieldAddProductsPrice" promptText="0.0" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="150.0" />

                    <Label text="Product Stock" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextField fx:id="fieldAddProductsQuantity" promptText="0" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200.0" />

                    <Label text="Product Category" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <ComboBox fx:id="fieldAddProductCategoriesId" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="150.0" />

                    <Label text="Product Distributor" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                    <ComboBox fx:id="fieldAddProductDistributorId" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="150.0" />

                    <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                    <TextArea fx:id="fieldAddProductsDescription" prefHeight="200.0" prefWidth="522.0" promptText="Description here" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                    <Text fx:id="viewProductsResponse" strokeType="OUTSIDE" strokeWidth="0.0" text="Product added!" visible="false" BorderPane.alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                    <Button mnemonicParsing="false" onAction="#btnAddProductsOnAction" styleClass="button, success" text="Add Product" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="8" />
                </GridPane>
            </center>
            <top>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add new product" BorderPane.alignment="CENTER_LEFT">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
            </top>
        </BorderPane>
    </children>
</AnchorPane>